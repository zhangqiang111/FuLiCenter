<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="cn.ucai.fulicenter">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.CAMERA"></uses-permission>
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>
    <uses-permission android:name="android.permission.READ_SYNC_SETTINGS"/>

    <application
        android:name=".application.FuliCenterApplication"
        android:allowBackup="true"
        android:icon="@mipmap/logo_uidemo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controller.activity.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".controller.activity.MainActivity"/>
        <activity android:name=".controller.activity.BoutiqueChildActivity"/>
        <activity android:name=".controller.activity.GoodsDetailsActivity"/>
        <activity android:name=".controller.activity.CategoryChildActivity"/>
        <activity android:name=".controller.activity.LoginActivity"/>
        <activity android:name=".controller.activity.RegisterActivity"/>
        <activity android:name=".controller.activity.SettingActivity"/>
        <activity android:name=".controller.activity.UpdateNickActivity">
        </activity>
        <activity android:name=".controller.activity.CollectActivity">
        </activity>
    </application>

</manifest>